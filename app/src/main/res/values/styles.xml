<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="wuffyTheme" parent="Theme.Base.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/actionBarStyle</item>

    </style>

    <style name="actionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/winter_sun_blue_darker_ligh</item>
        <item name="android:icon">@drawable/icon_alen</item>
    </style>

    <style name="menuDrawerCategory">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps" tools:ignore="NewApi">true</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingStart" tools:ignore="NewApi">16dp</item>
        <item name="android:background">@drawable/md__category_background</item>

        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="menuDrawerTitle">
        <item name="android:background">@drawable/md__list_selector_holo_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">23sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="menuDrawerIcone">
        <item name="android:textSize">27sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">@drawable/md__list_selector_holo_dark</item>

    </style>
    //fragment title

    <style name="fragmentTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/winter_sun_blue_darker_lighter</item>
        <item name="android:textSize">@dimen/fragment_title_text_size</item>
        <item name="android:padding">@dimen/fragment_title_padding</item>
    </style>

    //list item

    <style name="listItemText">
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="android:textColor">@color/white</item>

    </style>

    //sensor details

    <style name="detailsLabelItem">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/details_label_text_size</item>
        <item name="android:padding">@dimen/details_label_padding</item>
    </style>

    <style name="detailsValueItem">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/details_value_text_size</item>
        <item name="android:padding">@dimen/details_value_padding</item>
    </style>

    <style name="fragmentStyle">
        <item name="android:background">@color/black_light</item>
    </style>
</resources>
